extends layouts/_layout.pug

block content
    .col-md-4.col-md-offset-4
        div
            p Register Now
        .form-group
            input.form-control(type='text' name='username' placeholder='Username' id="username" required)
            br
            input.form-control(type='email' name='email' placeholder='E-mail' id="email" required)
            br
            input.form-control(type='password' name='password' placeholder='Password' id="password" required)
            br
            input.form-control(type='password' name='passwordConfirm' placeholder='Confirm Password' id="passwordConfirm" required)
            br
            button.btn.btn-success(onClick="submit()")
                | Add New User

block specific-js
    script( src="/js/register.js")